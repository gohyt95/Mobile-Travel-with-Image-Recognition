<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65pt">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCell"
        android:layout_width="160pt"
        android:layout_height="55pt"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImg"
                android:layout_width="55pt"
                android:layout_height="55pt"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5pt"
                android:paddingTop="3pt"
                android:paddingEnd="4pt"
                android:paddingBottom="3pt">

                <TextView
                    android:id="@+id/exploreCardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/exploreCardRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rating: "
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/exploreCardTitle"
                    app:layout_constraintStart_toStartOf="@+id/exploreCardTitle"
                    app:layout_constraintTop_toBottomOf="@+id/exploreCardTitle" />

                <TextView
                    android:id="@+id/exploreCardCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/exploreCardCategory"
                    app:layout_constraintTop_toBottomOf="@+id/exploreCardCategory" />

                <TextView
                    android:id="@+id/exploreCardCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/exploreCardRating"
                    app:layout_constraintStart_toStartOf="@+id/exploreCardRating"
                    app:layout_constraintTop_toBottomOf="@+id/exploreCardRating" />

                <TextView
                    android:id="@+id/exploreCardStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>